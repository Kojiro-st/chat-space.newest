.message
  .chat-main__message-list__whole
    .chat-main__message-list__whole__top
      .chat-main__message-list__whole__top__user-name
        = message.user.name
      .chat-main__message-list__whole__top__sent-time
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .lower-message
      - if message.content.present?
        %p.lower-message__content
          = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?