.side-bar
  .side-bar_user-name
    .side-bar_user-name_top-items
      .side-bar_user-name_top-items__name
        = current_user.name
      .side-bar_user-name_top-items__name__parent
        .side-bar_user-name_top-items__parent__icon
          .side-bar_user-name_top-items__parent__icon-child__icon1
            = link_to do
              = icon('fas','edit',class: "contents__btn-1")
          .side-bar_user-name_top-items__parent__icon-child__icon2
            =link_to edit_user_path(current_user) do
              = icon('fas','cog',class: "contents__btn-2")
  .side-bar__group-list