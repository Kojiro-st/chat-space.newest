.chat-main
  .chat-main_group-info
  .chat-main__group-info
    .chat-main__group-info__whole
      .chat-main__group-info__whole__current-name
        .chat-main__group-info__whole__current-name__current-name1
          = @group.name
        .chat-main__group-info__whole__current-name__current-name2
        = link_to edit_group_path(@group), class: "contents__btn" do
          Edit
      .chat-main__group-info__whole__edit
        - @group.users.each do |user|
          = user.name
      .chat-main__group-info__whole__bottom
  .chat-main__message-list
    = render @messages
    .chat-main__message-list__whole
      .chat-main__message-list__whole__top
        .chat-main__message-list__whole__top__user-name
          Naomi Scott
        .chat-main__message-list__whole__top__sent-time
          2020/2/21(Fri) 13:09:59
      .chat-main__message-list__whole__bottom
        .chat-main__message-list__whole__bottom__sent-message
          Hey Guys!!
  .chat-main__message-form
    .chat-main__message-form__sending-message
      = form_for [@group, @message] do |f|
        .chat-main__message-form__sending-message__left-message-1
          = f.text_field :content, class: 'login-input-text', placeholder: 'type a message'
        .chat-main__message-form__sending-message__left-message-2
          //=link_to "", class: "contents__btn-3" do
          = f.label :image, class: 'contents__btn-3' do
            = icon('far','image')
            = f.file_field :image, class: 'input-image-file'
          -# .chat-main__message-form__sending-message__left-message-2__2
        .chat-main__message-form__right-message
        = f.submit 'Send', class: 'input-submit'